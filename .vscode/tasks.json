{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build with gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}",
                "-I/opt/OpenBLAS/include",
                "-L/opt/OpenBLAS/lib",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lmatio",
                "-lopenblas",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}