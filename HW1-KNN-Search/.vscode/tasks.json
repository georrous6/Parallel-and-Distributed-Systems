{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build with gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/build/knnsearch",
                "-I/opt/OpenBLAS/include",
                "-I${workspaceFolder}/include",
                "-L/opt/OpenBLAS/lib",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lmatio",
                "-lopenblas",
                "-lm",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}