{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug knnsearch (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}",
            "args": ["${fileDirname}/test/approx_tests/test02.mat", "C", "Q", "3"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build with gcc"
        },
        {
            "name": "Debug validity tests (gdb)",
